<%= form_for(@application) do |f| %>
  <% if @application.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@application.errors.count, "error") %> prohibited this application from being saved:</h2>

      <ul>
      <% @application.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <% if current_user.type == "Instructor" || current_user.type == "Officer" %>
    <div class="field">
      <%= f.label :notes %><br>
      <%= f.text_area :notes %>
    </div>
    <br>
    <div class="field">
      <%= f.select :status_id, [
        ['Initated Application Process, Next Step: Submit Text File', 1], 
        ['Submitted Complete Application, Next Step: Phone Interview', 2],
        ['Passed Phone Interview, Next Step: In-Person Interview', 3],
        ['Passed In-Person Interview, Accepted', 4]
      ]%>
    </div>
  <% end %>
  <br>
  <% if current_user.type == "Student" %>
    <div class="field">
      <%= f.label :text_file %><br>
      <%= f.file_field :text_file %>
    </div>
    <p>Accepts files ending in .doc, .docx, .pdf, .rtf, and .txt</p>
    <br>
  <% end %>
  <div class="actions">
    <%= f.submit %>
  </div>

<% end %>

