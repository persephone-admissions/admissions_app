<p id="notice"><%= notice %></p>
<div class="user-container3">
  <h1>Employee List</h1>
  <div class="employee-table">
    <div class="employee-table1">
      <table>
        <thead>
          <tr>
            <th>First name</th>
            <th>Last name</th>
            <th>Type</th>
            <th>Email</th>
          
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% @employees.each do |employee| %>
            <tr>
              <td><%= employee.first_name %></td>
              <td><%= employee.last_name %></td>
              <td><%= employee.type %></td>
              <td><%= employee.email %></td>
              <td><%= link_to 'Show', employee_path(employee) %></td>
              <td><%= link_to 'Edit', edit_employee_path(employee) %></td>
              <td><%= link_to 'Destroy', employee_path(employee), method: :delete, data: { confirm: 'Are you sure?' } %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
  <br>
  <div class="new-course-link">
    <%= link_to 'New Employee', new_employee_path %>
  </div>
</div>
