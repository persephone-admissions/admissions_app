<p id="notice"><%= notice %></p>
<div class="user-container2">
	<h1>
	  <%= @employee.first_name %> <%= @employee.last_name %>
	</h1>
	<h4>
	  <a href="mailto:<%= @employee.email %>?Subject=Hello%20From%20GA" target="_top"><%= @employee.email %></a>
	</h4>
	<h4>
	  <%= @employee.type %>
	</h4>
	<h4>Courses:</h4>
		<div class="center-course">
			<% @employee.courses.each do |course| %>
				<p><a href="/courses/<%= course.id %>"><%= course.name %></a></p>
			<% end %>

		</div>
	<h4>Applicants:</h4>
		<div class="center-course">
			<% @employee.applications.flatten.each do |application| %>
				<p><%= link_to application.student.first_name, course_application_path(application.course, application) %></p>
				
			<% end %>
		</div>


	<%= link_to 'Edit', edit_employee_path(@employee) %> |
	<%= link_to 'Back', employees_path %>
</div>