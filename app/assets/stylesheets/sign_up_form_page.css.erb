.sign-up-image {
	background: url('<%= asset_path "GA-SignUp.jpg" %>');
	background-size: cover;
	background-repeat: no-repeat;
	width:100%;
	height:87.5vh;
	background-attachment: absolute;
}

.content-sign-up {
	background-color: rgba(200,200,200,.6);
	width: 65%;
	text-align: center;
	margin: 1em auto;
	border-radius: 3px;
	font-family: 'Oswald', sans-serif;
	font-size: 20px;
	color: black;
}

.field {
	display:inline-block;
	width: 200px;
	text-align: center;
}

.field input {
	border-radius: 8px;
	font-size: 15px;

}

.form-wrapper {
	margin: auto;
	width: 75%;
}

.field input:focus {
	box-shadow: 0 0 5px rgba(81, 203, 238, 1);
}



