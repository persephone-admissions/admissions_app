@import url(https://fonts.googleapis.com/css?family=Slabo+27px);

.log-in-image {
	background: url('<%= asset_path "GA-LogIn.png" %>');
	background-size: cover;
	background-repeat: no-repeat;
	width:100%;
	height:100%;
	background-attachment: absolute;
}
.content h1 {
	text-align: center;
}
.content {
	background-color: rgba(200,200,200,.6);
	width: 50%;
	text-align: center;
	margin: 5em auto;
	border-radius: 3px;
	font-family: 'Oswald', sans-serif;
	font-size: 25px;
	color: black;

}

.form-wrapper2 {
	width: 100%;
	margin: 0 auto;	
}



.log-in-button {
	text-align: center;
	font-size: 20px;
	color: white;
	font-family: 'Oswald', sans-serif;
	height:40px;
	width:150px;
	background-color: #F5483D;
	margin: 0 auto;
	position: relative;
	border: none;
	border-radius: 3px;
	margin-top: 20px;
	margin-bottom: 20px;
	margin-right: 300px;
}

.log-in-button:hover {
	background-color: #F1250C;
}

.log-in-button-container {
	width:78%;
	margin: 0 auto;
}