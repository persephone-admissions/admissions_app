@import url(https://fonts.googleapis.com/css?family=Slabo+27px);
@import url(https://fonts.googleapis.com/css?family=Oswald:400,300,700);

nav {
	display: flex;
    background-color: black;
	height: 5em;
	overflow: scroll;
	

}

.welcome {
	text-align: center;
	width: 50%;
	margin: 8em auto;
	font-family: 'Oswald', sans-serif;
	font-size: 28px;
	white-space: nowrap;
	
}

.welcome-background{
	background: url('<%= asset_path "GA-Splash.jpg" %>');
	width:100%;
	height:87.5vh;
	background-attachment: absolute;
}

.logo img {
	display: inline-block;
	position: relative;
	top: 40px;
	transform: translateY(-50%);
}

ul.nav-links {
  display: flex;
  justify-content: space-between; 
  margin-left: 35em;
  margin-right: 3em;
  margin-top: 2em; 
  max-width: 500px;

 }

li {
	padding-left: 3em;
	list-style-type: none;
}


.nav-links a {
	text-decoration: none;
	white-space: nowrap;
	font-family: 'Slabo 27px', serif;
	color: white;
	font-size: 22px;
}
